<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.qd.welfare.widgets.RatioImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:base="horizontal"
            app:horizontal_weight="4"
            app:vertical_weight="5" />

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            app:slantedBackgroundColor="#E60012"
            app:slantedLength="20dp"
            app:slantedMode="left"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="泷泽萝拉"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_theme"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="去看看"
                android:textColor="@color/tab_select"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="三围：89/89/89"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="代表作"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.qd.welfare.widgets.CustomeGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="8dp"
            android:numColumns="3" />
    </LinearLayout>
</LinearLayout>