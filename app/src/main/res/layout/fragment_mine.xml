<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.qd.welfare.widgets.RatioImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:base="horizontal"
            app:horizontal_weight="1"
            app:vertical_weight="1" />

        <com.haozhang.lib.SlantedTextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            app:slantedBackgroundColor="#FF0000"
            app:slantedLength="40dp"
            app:slantedMode="left"
            app:slantedText="TOP 1"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="16sp" />
    </RelativeLayout>

</LinearLayout>