<?xml version="1.0" encoding="utf-8"?>
<wiki.scene.loadmore.StatusViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F4F4"
        android:orientation="vertical">

        <com.shizhefei.view.indicator.ScrollIndicatorView
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fillViewport="false" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab"
            android:background="#70000000"
            android:gravity="center"
            android:text="客服QQ：170059106"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/pre_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_right_d" />

        <ImageView
            android:id="@+id/next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_left_s" />
    </RelativeLayout>
</wiki.scene.loadmore.StatusViewLayout>