<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--垂直滚动的TextView-->
    <declare-styleable name="VerticalRollingTextView">
        <!--文字颜色-->
        <attr name="android:textColor" />
        <!--文字大小-->
        <attr name="android:textSize" />
        <!--滚动动画时长-->
        <attr name="android:duration" />
        <!--两次动画之间的间隔-->
        <attr name="animInterval" format="integer" />
    </declare-styleable>

    <!--自定已宽高比例的IMageview-->
    <declare-styleable name="RatioImageView">
        <attr name="vertical_weight" format="integer" />
        <attr name="horizontal_weight" format="integer" />
        <attr name="base" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
    <!--评星条-->
    <declare-styleable name="DrawableRatingBar">
        <attr name="drbProgressDrawable" format="reference" />
        <attr name="drbSecondaryProgress" format="reference" />
        <attr name="drbDrawablePadding" format="dimension" />
        <attr name="drbMax" format="integer" />
        <attr name="drbMin" format="integer" />
        <attr name="drbRating" format="integer" />
        <attr name="drbManually" format="boolean" />
        <attr name="drbOnlyItemTouchable" format="boolean" />
        <attr name="drbGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>
</resources>